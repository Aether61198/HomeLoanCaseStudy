<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Loan</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/css" href="~/Styles/homepage.css">
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top">
        <div class="container user-select-none">
            <a class="navbar-brand" href="/">
                <img src="~/assets/HomeLoan.png" width="30" height="30" class="d-inline-block align-top" alt="">
                Home Loan
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="nav navbar-nav me-auto">
                    <li>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("About Us", "About", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Calculator
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li>@Html.ActionLink("Eligibility Calculator", "Eligibility", "Calculator", null, new { @class = "dropdown-item" })</li>
                            <li><hr class="dropdown-divider"></li>
                            <li>@Html.ActionLink("EMI Calculator", "EmiCal", "Calculator", null, new { @class = "dropdown-item" })</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Application", "Index", "Application", null, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contact Us", "Contact", "Home", null, new { @class = "nav-link" })</li>
                </ul>
                @if (User.Identity.IsAuthenticated)
                {
                    using (Html.BeginForm("Logout", "Users", FormMethod.Post, new { id = "logoutForm" }))
                    {
                        <button class="btn btn-outline-light me-2" type="button" onclick="location.href='javascript:document.getElementById(`logoutForm`).submit()'">Logout</button>
                    }
                }
                else
                {
                    <button class="btn btn-outline-light me-2" type="button" onclick="location.href='@Url.Action("Login", "Users")'">Login</button>
                    <button class="btn btn-light" type="button" onclick="location.href='@Url.Action("Register", "Users")'">Register</button>
                }
            </div>
        </div>
    </nav>
    <div class="container body-content text-white">
        @RenderBody()
    </div>
    <div class="container fixed-bottom text-center">
        <p class="footer-text user-select-none">&copy; @DateTime.Now.Year - Home Loan Application</p>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
